                <Border BackgroundColor="#F8F9FA" HeightRequest="50" Padding="15,0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>
                    <Grid ColumnDefinitions="30,*">
                        <Label Text="ğŸ‘¤" VerticalOptions="Center"/>
