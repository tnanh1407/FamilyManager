                        HeightRequest="50"
                        CornerRadius="25">

                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="{StaticResource PrimaryColor}" Offset="0"/>
