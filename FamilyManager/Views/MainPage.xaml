<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FamilyManager.Views.MainPage"
             Title="Quản Lý Gia Đình">

    <Grid RowDefinitions="Auto, *">
        <Label Text="Danh sách thành viên"
               FontSize="20"
               FontAttributes="Bold"
               Margin="20,20,0,10"
               TextColor="#512BD4"/>

        <VerticalStackLayout Grid.Row="1" VerticalOptions="Center" HorizontalOptions="Center">
            <Label Text="Chưa có dữ liệu" TextColor="Gray" />
            <Button Text="Thêm thành viên mới" Margin="0,20,0,0"/>
        </VerticalStackLayout>
    </Grid>

</ContentPage>